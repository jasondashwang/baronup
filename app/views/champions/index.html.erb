<div ng-controller="ChampionCtrl">
	<%= render :partial => "attack_champion_modal"%>
	<%= render :partial => "defend_champion_modal"%>
	<!-- Item Box -->
	<div id="fullWrap">
		<!-- Attack Side -->
		<div class="attackSide">
			<!-- Champion Select -->
			<div class="championSelect" data-toggle="modal" data-target="#attackChampionModal">
				<img ng-attr-src="{{attackChampion.profile_image_url}}" ng-if="attackChampion" class="loadingImage">
			</div>
			<!-- Level Slider -->
			<div class="levelSelector">
				<h4 class="spacer">Level Slider</h4>
			</div>
			<!-- Runes Button -->
			<button type="button" class="btn btn-primary btn-lg">
				Runes
			</button>
			<!-- Masteries Button -->
			<button type="button" class="btn btn-primary btn-lg">
				Masteries
			</button>
			<!-- Stat Table -->
		</div>

		<!-- Center -->
		<div class="centerPiece">
			<!-- Attack Stats -->
			<div class="stats" id="attackStats" style="overflow: scroll;">
				<%=render :partial => "attack_champion_table"%>
			</div>

			<!-- Defense Stats -->
			<div class="stats" id="defenseStats">
				<%=render :partial => "defend_champion_table"%>
			</div>

			<!-- Attack Inventory -->
			<div>
				<h4 class="spacer" id="attackInventory">Attack Inventory (will act as a button to a popup window)</h4>
			</div>

			<!-- Defense Inventory -->
			<div>
				<h4 class="spacer" id="defenseInventory">Defense Inventory (will act as a button to a popup window)</h4>
			</div>
		</div>

		<!-- Defense Side -->
		<div class="defenseSide">
			<!-- Champion Select -->
			<div class="championSelect" data-toggle="modal" data-target="#defendChampionModal">
				<img ng-attr-src="{{defendChampion.profile_image_url}}" ng-if="defendChampion" class="loadingImage">
			</div>
			<!-- Level Slider -->
			<div class="levelSelector">
				<h4 class="spacer">Level Slider</h4>
			</div>

			<!-- Rune Button -->
			<button type="button" class="btn btn-primary btn-lg">
				Runes
			</button>

			<!-- Masteries Button -->
			<button type="button" class="btn btn-primary btn-lg">
				Masteries
			</button>
		</div>

	</div>
</div>